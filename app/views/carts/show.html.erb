<div class="span12">
<div class="well well-small ">


    <h2>Cart Items</h2>
    <h3 class="pull-right">Total : <%= number_to_currency(@cart.total_price) %></h3>




  <div class="table-responsive">
    <%= link_to "Checkout" , new_order_path , class: 'shopBtn' %></span>



    <table id="mytable" class="table table-bordred table-striped">

      <thead>


      <th>Quantity</th>
      <th>Image</th>
      <th>Product</th>
      <th>Price</th>


      </thead>

      <tbody>
      <% @cart.line_items.each do |item| %>

          <tr>
            <td><%= item.quantity %></td>
            <td><%= image_tag item.product.image , style: "height: 100px; width:250px" %></td>
            <td><%= item.product.product_name %></td>
            <td><%= number_to_currency(item.total_price) %></td>
          </tr>



          <% end %>

      </tbody>
          </table>


          </div>

  <%= button_to "Empty Cart" , @cart, method: :delete , class: 'btn-danger' %>

    </div>

    </div>
