<div class="container well well-large">

  <h4>Yearly Sales</h4>
  <%= form_tag '', method: 'get' do %>

      <%= select_year @year, {start_year: Date.today.year, end_year: Date.today.year - 10}, {} %>

      <%= submit_tag 'Search' %>


  <% end %>

  <div class="table-responsive">


    <table class="table table-bordered table-condensed">
      <thead>
      <tr>
        <th rowspan="2">Product Name</th>
        <% Product::MONTH_NAME.each do |month| %>
            <th colspan="2"><%= month %></th>
        <% end %>
      </tr>

      <tr>

        <% (1..12).each do  %>

            <th>Qty</th>
            <th>Sell</th>


        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.product_name %></td>

            <% (1..12).each do |month| %>
                <td><%= @total_sell[product.id][month][:total_quantity] %></td>
                <td><%= @total_sell[product.id][month][:total_price] %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
