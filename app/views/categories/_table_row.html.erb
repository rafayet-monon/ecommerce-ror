<tr id="category_<%= category.id %>">
  <td><%= category.category_name %></td>
  <td><%= category.category_description %></td>
  <td><%= link_to '', subcategory_path(category), class: 'btn btn-primary btn-xs icon-eye-open' %></td>
  <td><%= link_to '', edit_category_path(category), class: 'btn btn-primary btn-xs icon-edit', remote:true %></td>
  <td><%= link_to '', category_path(category), class: 'btn btn-danger btn-xs icon-trash', method: :delete,
                  data: {confirm: 'Are you sure you want to delete?'} %></td>
</tr>