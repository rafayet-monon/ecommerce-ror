<% if @subcategories.present? %>
$("#product_sub_category").find('option:gt(0)').remove();
$("#product_sub_category").prop('disabled', false);
<% @subcategories.each do |sub_category| %>
$("#product_sub_category").append("<option value=<%= sub_category.id %>> <%= sub_category.category_name %></option>");
<% end %>
<% else %>
$("#product_sub_category").find('option:gt(0)').remove();
$("#product_sub_category").prop('disabled', true);
<% end %>